#!/bin/sh

echo "==================== spotless::start ========================"
echo "ðŸ”Ž Running spotlessApply"
stagedFiles=$(git diff --staged --name-only)
./gradlew spotlessApply --daemon
for file in $stagedFiles; do
 if test -f "$file"; then
   git add "$file"
 fi
done
echo "âœ… SpotlessApply completed."
echo "==================== spotless::end ========================"
